<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", teams_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_team_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", team_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.team.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @team.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.team.city", :default => t("activerecord.labels.city", :default => "City")) %>:</b>
          <%= @team.city %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.team.state", :default => t("activerecord.labels.state", :default => "State")) %>:</b>
          <%= @team.state %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.team.country", :default => t("activerecord.labels.country", :default => "Country")) %>:</b>
          <%= @team.country %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_team_path(@team), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), team_path(@team), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>