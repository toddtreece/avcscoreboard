<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", heats_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_heat_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Heats</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.heat.bot_types_id", :default => t("activerecord.labels.bot_types_id", :default => "Bot_types_id")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @heats.each do |heat| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= heat.id %>
          </td>
                    <td>
            <%= link_to heat.bot_types_id, heat_path(heat) %>
          </td>
                    <td>
            <%= heat.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", heat_path(heat) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_heat_path(heat) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", heat_path(heat), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
