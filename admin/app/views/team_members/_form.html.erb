
  <div class="group">
    <%= f.label :firstname, t("activerecord.attributes.team_member.firstname", :default => "Firstname"), :class => :label %>
    <%= f.text_field :firstname, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :lastname, t("activerecord.attributes.team_member.lastname", :default => "Lastname"), :class => :label %>
    <%= f.text_field :lastname, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :teams_id, t("activerecord.attributes.team_member.teams_id", :default => "Teams"), :class => :label %>
    <%= f.select :teams_id, Team.all.map { |team| [team.name, team.id] } %>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), team_members_path, :class => "text_button_padding link_button" %>
</div>
