<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", team_members_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_team_member_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", team_member_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.team_member.firstname", :default => t("activerecord.labels.firstname", :default => "Firstname")) %>:</b>
          <%= @team_member.firstname %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.team_member.lastname", :default => t("activerecord.labels.lastname", :default => "Lastname")) %>:</b>
          <%= @team_member.lastname %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.team_member.teams_id", :default => t("activerecord.labels.teams_id", :default => "Teams")) %>:</b>
          <%= @team_member.teams_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_team_member_path(@team_member), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), team_member_path(@team_member), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>