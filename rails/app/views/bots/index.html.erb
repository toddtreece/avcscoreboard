<h1>Listing bots</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bot types</th>
    <th>Teams</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bots.each do |bot| %>
  <tr>
    <td><%= bot.name %></td>
    <td><%= bot.bot_types_id %></td>
    <td><%= bot.teams_id %></td>
    <td><%= link_to 'Show', bot %></td>
    <td><%= link_to 'Edit', edit_bot_path(bot) %></td>
    <td><%= link_to 'Destroy', bot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

